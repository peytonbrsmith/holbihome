<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="holbihome.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:holbihome">

    <Shell.FlyoutHeader>
        <ImageButton Source="seahorse.png" HeightRequest="100" WidthRequest="50" BackgroundColor="Transparent"></ImageButton>
    </Shell.FlyoutHeader>

    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid HeightRequest="100" WidthRequest="100">

                <Image Source="{Binding FlyoutIcon}" HeightRequest="22" Margin="-25,0,0,0"/>
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>

    <FlyoutItem Title="Dashboard" FlyoutIcon="{StaticResource Dashboard}">
        <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="dashboard" />
    </FlyoutItem>

    <FlyoutItem Title="Projects" FlyoutIcon="{StaticResource Projects}">
        <ShellContent
            Title="Projects"
            ContentTemplate="{DataTemplate local:ProjectsPage}"
            Route="projects" />
    </FlyoutItem>

    <FlyoutItem Title="Concepts" FlyoutIcon="{StaticResource Concepts}">
        <ShellContent
            Title="Concepts"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="concepts" />
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
            <ShellContent
            Title="Account"
            ContentTemplate="{DataTemplate local:AccountPage}"
            Route="concepts" 
                Icon="{StaticResource Profile}"/>
            <ShellContent
            Title="Application"
            ContentTemplate="{DataTemplate local:AccountPage}"
            Route="concepts" 
                Icon="{StaticResource Settings}"/>
        </FlyoutItem>
        <!--<VerticalStackLayout>
                <Image
                Source="{StaticResource Profile}"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="100"
                HeightRequest="75"
                Aspect="Center"
                />
                <Image
                Source="{StaticResource Settings}"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="100"
                HeightRequest="75"
                Aspect="Center"
                />
            </VerticalStackLayout>-->
    </Shell.FlyoutFooter>

</Shell>

