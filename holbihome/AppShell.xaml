<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="holbihome.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:holbihome">

    <Shell.FlyoutHeader>
        <ImageButton Source="seahorse.png" HeightRequest="100" WidthRequest="50" BackgroundColor="Transparent"></ImageButton>
    </Shell.FlyoutHeader>

    <Shell.ItemTemplate>
        <DataTemplate>
            <Image
                Source="{Binding FlyoutIcon}"
                HorizontalOptions="Center"
                WidthRequest="100"
                HeightRequest="75"
                Aspect="Center"
                />
        </DataTemplate>
    </Shell.ItemTemplate>

    <FlyoutItem Title="Dashboard" FlyoutIcon="{StaticResource Dashboard}">
        <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="dashboard" />
    </FlyoutItem>

    <FlyoutItem Title="Projects" FlyoutIcon="{StaticResource Projects}">
        <ShellContent
            Title="Projects"
            ContentTemplate="{DataTemplate local:ProjectsPage}"
            Route="projects" />
    </FlyoutItem>

    <FlyoutItem Title="Concepts" FlyoutIcon="{StaticResource Concepts}">
        <ShellContent
            Title="Concepts"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="concepts" />
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <VerticalStackLayout>
            <Image
                Source="{StaticResource Profile}"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="100"
                HeightRequest="75"
                Aspect="Center"
                />
            <Image
                Source="{StaticResource Settings}"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="100"
                HeightRequest="75"
                Aspect="Center"
                />
        </VerticalStackLayout>
    </Shell.FlyoutFooter>

</Shell>

