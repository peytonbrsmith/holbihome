<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="holbihome.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:holbihome"
    >

    <Shell.FlyoutHeader>
        <ImageButton Source="seahorse.png" HeightRequest="100" WidthRequest="50" ></ImageButton>
    </Shell.FlyoutHeader>

    <!--<Shell.FlyoutFooter>
        <StackLayout>



        </StackLayout>
    </Shell.FlyoutFooter>-->

    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid HeightRequest="50">

                <ImageButton Source="{Binding FlyoutIcon}" Aspect="Center"></ImageButton>

            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>

    <FlyoutItem Title="Dashboard" FlyoutIcon="{StaticResource Dashboard}" >
        <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="dashboard" />
    </FlyoutItem>

    <FlyoutItem Title="Projects" FlyoutIcon="{StaticResource Projects}">
        <ShellContent
            Title="Projects"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="projects" />
    </FlyoutItem>
    <!--<FlyoutItem Title="Flyout Four" FlyoutIcon="{StaticResource IconFour}">
        <ShellContent
            Title="Four"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="FourPage" />
    </FlyoutItem>-->

</Shell>

