<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             x:Class="holbihome.Controls.CardView"
             x:Name="Card"
             xmlns:local="clr-namespace:holbihome">
    <Frame BindingContext="{x:Reference Card}" Margin="10" VerticalOptions="FillAndExpand">
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="FillAndExpand">

            <HorizontalStackLayout Spacing="20" HorizontalOptions="CenterAndExpand" HeightRequest="25" Margin="20">
                <Image>
                    <Image.Source>
                        <FontImageSource Glyph="{Binding CardIcon}" Color="{StaticResource Primary}" FontFamily="FontAwesome"
               Size="22">
                        </FontImageSource>
                    </Image.Source>
                </Image>
                <Label VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Text="{Binding CardTitle}"></Label>
            </HorizontalStackLayout>

            <ContentView Content="{Binding CardContent}">
                
            </ContentView>

        </VerticalStackLayout>
    </Frame>
</ContentView>
